    +	# Return the text of the link to a tag, depending on option linktext.
    +	use Data::Dumper;
    +	my $page = $_[0];
    +	my $linktype = $_[1];
    +	if (($linktype eq "title") and (exists $pagestate{$page}{meta}{title})) {
    +		return $pagestate{$page}{meta}{title};
    +	} else {
    +		return undef;
    +	}
     }
     
